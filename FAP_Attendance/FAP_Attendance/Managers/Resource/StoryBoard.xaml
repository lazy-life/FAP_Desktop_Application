<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="myStoryboard">
        <DoubleAnimation Storyboard.TargetName="myImage" Storyboard.TargetProperty="(Canvas.Top)" From="200" To="400" Duration="0:0:2"/>
        <DoubleAnimation Storyboard.TargetName="myImage" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
    </Storyboard>

    <Storyboard x:Key="myStoryboard1">
        <DoubleAnimation Storyboard.TargetName="myImage1" Storyboard.TargetProperty="(Canvas.Bottom)" From="200" To="390" Duration="0:0:2"/>
        <DoubleAnimation Storyboard.TargetName="myImage1" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
    </Storyboard>

</ResourceDictionary>